<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setActivity">>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="474dp"
        android:layout_height="803dp"
        android:background="@drawable/ppop"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="343dp"
        android:layout_height="219dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/musikk" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="349dp"
        android:layout_height="224dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nameaftor" />

    <Button
        android:id="@+id/playButon"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="280dp"
        android:backgroundTint="#15980C"
        android:onClick="play"
        android:text="Вкл"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="92dp"
        android:layout_height="51dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="172dp"
        android:backgroundTint="#BF1F1F"
        android:onClick="stop"
        android:text="Выкл"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>